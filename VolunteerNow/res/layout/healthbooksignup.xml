<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f5f6f5">

   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
         android:background="#f5f6f5" >

        <ScrollView
            android:id="@+id/scrollableContents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5f6f5" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:background="#f5f6f5"
                android:orientation="horizontal"
                android:tileMode="repeat"
                android:padding="10dip" >

                
                <!-- Header Ends -->
                <!-- NRIC -->
 <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="To create your health profile, please sign up or login first"
                android:textSize="15dip"
                android:id="@+id/lbusername"/>
               
             
  <Button
                        android:id="@+id/btnBook"
                        android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_below="@+id/lbusername"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
android:textSize="20dip"
android:alpha="1" 

android:background="@drawable/buttonstyle" />
                  <RelativeLayout
                      android:layout_below="@+id/btnBook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="10dip"
     >
                    <TextView 
                  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/regg"
                android:text="Already have an account? "
                android:textColor="#000000"
android:textSize="15dip"
android:alpha="1" 

                />
                     <TextView android:id="@+id/link_to_login"
                  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/regg"
                android:text="Login"
                android:textColor="#e94256"
android:textSize="15dip"
android:alpha="1" 

                />
                    </RelativeLayout>

                <TextView
                    android:id="@+id/TextViewaaa"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medication"
                     >
                </TextView>

             
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
