<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f5f6f5">

   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
         android:background="#f5f6f5" >

        <ScrollView
            android:id="@+id/scrollableContents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f5f6f5" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:background="#f5f6f5"
                android:orientation="horizontal"
                android:tileMode="repeat"
                android:padding="10dip" >

                
                <!-- Header Ends -->
                <!-- NRIC -->
 <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="NRIC/Passport Number"
                android:textSize="12dip"
                android:id="@+id/lbusername"/>
               
                <EditText
                    android:id="@+id/his_NRIC"
                   android:layout_width="fill_parent"
              android:layout_below="@+id/lbusername"
                android:layout_height="wrap_content"
               
                android:singleLine="true"
                 android:padding="10dip"
                 android:background="@drawable/backwithborder"

                 android:textColor="#000000"
                   />

                 <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="Full Name"
                android:textSize="12dip"
                android:id="@+id/lbusername2"
                 android:layout_below="@+id/his_NRIC"/>

                <EditText
                    android:layout_below="@+id/lbusername2"
                    android:id="@+id/his_fullname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                 android:padding="10dip"
                 android:background="@drawable/backwithborder"

                 android:textColor="#000000"
                 
                     />

                
 <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="Drug Allergies (if any)"
                android:textSize="12dip"
                android:id="@+id/lbusername3"
                 android:layout_below="@+id/his_fullname"/>

                <EditText
                    android:id="@+id/allergies"
                    android:layout_width="fill_parent"
                    android:layout_height="70sp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbusername3"
                     android:padding="10dip"
                 android:background="@drawable/backwithborder"

                 android:textColor="#000000"
                   
                    android:ems="10"
                    android:gravity="top|left"
                    android:maxLength="150"
                     />
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="Medical History (if any)"
                android:textSize="12dip"
                android:id="@+id/lbusername4"
                 android:layout_below="@+id/allergies"/>
                


                <EditText
                    android:id="@+id/medicalhistory"
                    android:layout_width="fill_parent"
                    android:layout_height="70sp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbusername4"
                      android:padding="10dip"
                 android:background="@drawable/backwithborder"

                 android:textColor="#000000"
                    
                    android:ems="10"
                    android:gravity="top|left"
                    android:maxLength="150" />
                <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:text="Current Medication (if any)"
                android:textSize="12dip"
                android:id="@+id/lbusername5"
                 android:layout_below="@+id/medicalhistory"/>
                
                
                <EditText
                    android:id="@+id/medication"
                    android:layout_width="fill_parent"
                    android:layout_height="70sp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lbusername5"
                      android:padding="10dip"
                 android:background="@drawable/backwithborder"

                 android:textColor="#000000"
                  
                    android:ems="10"
                    android:gravity="top|left"
                    android:maxLength="150" />

                

                <TextView
                    android:id="@+id/TextViewaaa"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medication"
                     >
                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextViewaaa" >

                    <Button
                        android:id="@+id/btnBook"
                        android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="Finish"
                android:textColor="#FFFFFF"
android:textSize="20dip"
android:alpha="1" 

android:background="@drawable/buttonstyle" />

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="Update"
                android:textColor="#FFFFFF"
android:textSize="20dip"
android:alpha="1" 

android:background="@drawable/buttonstyle" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
